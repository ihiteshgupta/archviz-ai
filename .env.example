# ArchViz AI - Environment Variables
# Copy to .env and fill in your values

# =============================================================================
# Azure OpenAI
# =============================================================================
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_API_KEY=your-api-key-here
AZURE_OPENAI_API_VERSION=2024-02-15-preview

# Model deployments (create these in Azure OpenAI Studio)
AZURE_OPENAI_GPT4_DEPLOYMENT=gpt-4o
AZURE_OPENAI_GPT4V_DEPLOYMENT=gpt-4o
AZURE_OPENAI_DALLE_DEPLOYMENT=dall-e-3

# =============================================================================
# Azure Blob Storage
# =============================================================================
AZURE_STORAGE_ACCOUNT_NAME=your-storage-account
AZURE_STORAGE_ACCOUNT_KEY=your-storage-key
# Or use connection string instead:
# AZURE_STORAGE_CONNECTION_STRING=DefaultEndpointsProtocol=https;AccountName=...

# Container names (these will be created automatically)
AZURE_UPLOADS_CONTAINER=uploads
AZURE_RENDERS_CONTAINER=renders
AZURE_TEXTURES_CONTAINER=textures
AZURE_MODELS_CONTAINER=models

# =============================================================================
# Azure ML (for ControlNet pro renders - optional)
# =============================================================================
# AZURE_ML_WORKSPACE=your-workspace
# AZURE_ML_ENDPOINT=your-endpoint-name
# AZURE_ML_ENDPOINT_KEY=your-endpoint-key

# =============================================================================
# Application Settings
# =============================================================================
# API settings
API_HOST=0.0.0.0
API_PORT=8000

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3000

# =============================================================================
# Optional: Anthropic Claude (fallback)
# =============================================================================
# ANTHROPIC_API_KEY=your-anthropic-key
